@page "/confirm-modal-demo"
@using SampleProject.TestComponents

<ConfirmModalTest @ref="confirmModal" Title="Warning"
    BodyText="Are you sure you want to delete this record? THIS ACTION IS IRREVERSIBLE!" HandyModalType="HandyModalType.INFO"/>

<label>Confirmation Modal Demo:</label>
<button class="btn btn-primary" @onclick="ConfirmButton">
    Confirm Test
</button>
<p class="mt-3" style="font-size: 1.25rem;">Confirmation Message: @Message</p>


@code {
    private ConfirmModalTest confirmModal = default!;
    private string Message { get; set; } = "";

    private async Task ConfirmButton()
    {
        var response = await confirmModal.ShowAsync();
        Message = response ? "confirmed" : "canceled";
    }
}