@using SampleProject.ComponentBases
@inherits ModalBase

<div id="session_expired_modal" class="modal fade @(IsVisible ? "show d-block" : "")" tabindex="-1" style="background: rgba(0, 0, 0, 0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <p class="@ModalClass">@BodyText</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="Cancel">Click here to start again</button>
            </div>
        </div>
    </div>
</div>

@code {
    // do whatever you want in this callback
    [Parameter]
    public EventCallback Callback {get;set;}

    [JSInvokable]
    public override Task<bool> ShowAsync()
    {
        return base.ShowAsync();
    }

    [JSInvokable]
    public bool IsModalVisible() => IsVisible;

    public override async void Cancel()
    {
        base.Cancel();
        await Callback.InvokeAsync();
    }
}
